<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <title>Calendar</title>
</head>

<body class="bg-gray-100">
  <div class="flex min-h-screen">

    <!-- LEFT NAV -->
    <div class="w-64 bg-gray-900 text-white px-6 py-8 flex flex-col">
      <div class="flex flex-col items-center mb-10">
        <img
          class="h-20 w-20 rounded-full object-cover mb-3"
          src="https://i.pinimg.com/236x/1d/27/4f/1d274fb2067ef14c6ba0dd4031120cf8.jpg"
          alt="User"
        />
        <h1 class="text-lg font-semibold">@user_name</h1>
      </div>

            <div class="flex flex-col space-y-4">
              <button class="w-full hover:border-1 border-sky-500 text-sky py-2 px-4 rounded-full text-center transition" onclick="window.location.href='/home'">Home</button>
              <button class="w-full hover:border-1 border-sky-500 text-sky py-2 px-4 rounded-full text-center transition" onclick="window.location.href='/income'">Income</button>
              <button class="w-full hover:border-1 border-sky-500 text-sky py-2 px-4 rounded-full text-center transition" onclick="window.location.href='/expence'">Expences</button>
              <button class="w-full border-2 border-white-500 bg-sky-500 text-white py-2 px-4 rounded-full text-center transition" onclick="window.location.href='/calender'">Calendar</button>
            </div>
    </div>

    <!-- RIGHT BODY -->
    <div class="flex-1 p-8">

      <label class="block text-lg font-semibold text-gray-700 mb-2">
        Date
      </label>

      <form action="/calender" method="GET" class="flex gap-4 mb-6">
        <input
          type="date"
          name="inpt_cdate"
          required
          class="border border-gray-300 rounded-lg px-3 py-2"
        />

        <button
          type="submit"
          class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2 rounded-lg"
        >
          Submit
        </button>
      </form>

      <!-- RESULTS (CORRECT LOOP) -->

      <% if (!selectedDate) { %>
        <p class="text-gray-500">Please select a date.</p>
      <% } else if (transactions.length === 0) { %>
        <p class="text-gray-500">No transactions found for selected date.</p>
      <% } %>

      <% transactions.forEach(trans => { %>
        <section class="mb-6 bg-white rounded-xl shadow-sm p-6 space-y-3">

          <div class="flex justify-between items-center">
            <h2 class="font-semibold text-gray-800">
              <%= trans.transaction_date %>
            </h2>
            <span class="<%= trans.form_type === 'income' ? 'text-green-600' : 'text-red-600' %> font-semibold">
              <%= trans.form_type.toUpperCase() %>
            </span>
          </div>

          <div class="flex justify-between items-center">
            <span class="font-medium"><%= trans.transaction_name %></span>
            <span class="font-bold">
              <%= trans.form_type === 'income' ? '+' : '-' %>
              â‚¹<%= trans.total_amo %>
            </span>
          </div>

          <p class="text-sm text-gray-600">
            Category: <%= trans.category %>
          </p>

          <p class="text-sm text-gray-600">
            Description: <%= trans.description %>
          </p>

        </section>
      <% }) %>

    </div>
  </div>
</body>
</html>